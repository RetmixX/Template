<Window x:Class="Template.SourcePath"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template"
        mc:Ignorable="d"
        Title="SourcePath" MinHeight="400" MinWidth="400" MaxHeight="400" MaxWidth="400">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="206*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>

        <TextBox Name="PATH" Width="200" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <TextBlock Text="Пример: C:\Sourse" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>

        <Button Content="Продолжить" Grid.Row="4" Height="25" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Next"/>

    </Grid>
</Window>
